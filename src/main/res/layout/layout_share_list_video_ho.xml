<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/share_p" android:background="#6a000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.52"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/bottom_share" android:background="#b3222222" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.48">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@+id/share_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_40dp" android:text="@string/share_title"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:paddingLeft="@dimen/dimen_sw_30dp" android:paddingRight="@dimen/dimen_sw_30dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/share_photo" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_m_6dp" android:layout_weight="1">
                    <ImageView android:layout_width="@dimen/dimen_sw_45dp" android:layout_height="@dimen/dimen_sw_45dp" android:src="@drawable/mine_def_photo" android:contentDescription="@string/comment"/>
                    <TextView android:textSize="12sp" android:textColor="@color/white" android:layout_gravity="bottom|center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="图片分享"/>
                </LinearLayout>
                <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/share_weixin" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/wechat_friend" android:drawableTop="@drawable/share_wechat_night" android:drawablePadding="4dp" android:layout_weight="1"/>
                <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/share_penyou_quan" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/third_wechatmoments" android:drawableTop="@drawable/share_friends_night" android:drawablePadding="4dp" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_20dp">
                <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/share_qq" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/third_qq" android:drawableTop="@drawable/share_qq_night" android:drawablePadding="4dp" android:layout_weight="1"/>
                <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/share_sina" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/third_sina_weibo" android:drawableTop="@drawable/share_xinlang_night" android:drawablePadding="4dp" android:layout_weight="1"/>
                <View android:layout_width="0dp" android:layout_height="@dimen/dimen_sw_50dp" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <View android:id="@+id/share_line" android:background="#d9666666" android:layout_width="match_parent" android:layout_height="0.3dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/txt_cancel" android:background="#9f222222" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_50dp" android:text="@string/Cancel"/>
    </LinearLayout>
</LinearLayout>
