<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/layout_pay_selected" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/payment_alipay" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="70dp">
        <ImageView android:id="@+id/image_icon_zhifubao" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/zhifubaopay" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <TextView android:textSize="16sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/a_pay_str" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/pay_alipay" android:layout_toRightOf="@+id/image_icon_zhifubao" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:id="@+id/a_pay_str_none" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="不可用" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/image_alipay" android:visibility="visible" android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/icon_gougou_red" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
    </RelativeLayout>
    <View android:id="@+id/line" android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    <RelativeLayout android:id="@+id/payment_weixin" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="70dp">
        <ImageView android:id="@+id/image_icon_weixin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/weixinpay" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <TextView android:textSize="16sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/w_pay_str" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/pay_wechat" android:layout_toRightOf="@+id/image_icon_weixin" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:id="@+id/w_pay_str_none" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="不可用" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/image_weixin" android:visibility="gone" android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/icon_gougou_red" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
    </RelativeLayout>
</LinearLayout>
