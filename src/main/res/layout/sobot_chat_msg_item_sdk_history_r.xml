<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/sobot_msg_top_bottom_style">
    <TextView android:id="@+id/sobot_reminde_time_Text" style="@style/sobot_center_remind_time"/>
    <RelativeLayout android:layout_gravity="end" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@+id/sobot_name" android:visibility="gone" android:layout_toLeftOf="@+id/sobot_imgHead" android:layout_toStartOf="@+id/sobot_imgHead" style="@style/sobot_chatting_nickname"/>
        <com.sobot.chat.widget.SobotImageView android:id="@+id/sobot_imgHead" android:visibility="gone" android:layout_alignParentRight="true" android:contentDescription="@null" android:layout_alignParentEnd="true" style="@style/sobot_chatting_imghead"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/sobot_ll_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_toLeftOf="@+id/sobot_imgHead" android:layout_below="@+id/sobot_name" android:layout_marginStart="15dp" android:layout_toStartOf="@+id/sobot_imgHead" style="@style/sobot_msg_right_content_ll_bg_style">
            <TextView android:textSize="@dimen/sobot_msg_text_size" android:textColor="@color/sobot_right_msg_text_color" android:id="@+id/sobot_sdk_history_msg" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="1dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
