<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/sobot_real_ll_content" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/sobot_msg_top_bottom_style">
    <TextView android:id="@+id/sobot_reminde_time_Text" style="@style/sobot_center_remind_time"/>
    <RelativeLayout android:layout_gravity="end" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/sobot_name" android:visibility="gone" android:layout_toLeftOf="@+id/sobot_imgHead" android:layout_toStartOf="@+id/sobot_imgHead" style="@style/sobot_chatting_nickname"/>
        <com.sobot.chat.widget.SobotImageView android:id="@+id/sobot_imgHead" android:visibility="gone" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" style="@style/sobot_chatting_imghead"/>
        <LinearLayout android:layout_gravity="end" android:id="@+id/sobot_my_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/sobot_imgHead" android:layout_below="@+id/sobot_name" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/sobot_imgHead">
            <RelativeLayout android:id="@+id/sobot_rl_hollow_container" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/sobot_msg_file_left_content_ll_bg_style">
                <TextView android:textSize="14sp" android:textColor="@color/sobot_goods_title_text_color" android:ellipsize="end" android:id="@+id/sobot_goods_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2"/>
                <com.sobot.chat.widget.BorderImageView android:id="@+id/sobot_goods_pic" android:visibility="visible" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:src="@drawable/sobot_icon_consulting_default_pic" android:scaleType="centerCrop" android:layout_below="@+id/sobot_goods_title" android:layout_marginEnd="10dp"/>
                <TextView android:textSize="14sp" android:textColor="@color/sobot_goods_des_text_color" android:id="@+id/sobot_goods_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:maxLines="1" android:layout_toRightOf="@+id/sobot_goods_pic" android:layout_below="@+id/sobot_goods_title" android:layout_alignTop="@+id/sobot_goods_pic" android:layout_toEndOf="@+id/sobot_goods_pic"/>
                <TextView android:textSize="14sp" android:textColor="@color/sobot_goods_price_text_color" android:id="@+id/sobot_goods_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_toRightOf="@+id/sobot_goods_pic" android:layout_below="@+id/sobot_goods_des" android:layout_toEndOf="@+id/sobot_goods_pic"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
