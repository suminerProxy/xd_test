<?xml version="1.0" encoding="utf-8"?>
<com.soli.pullupdownrefresh.PullRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/pullRefreshLayout" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:background="@color/color_white" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_100dp">
                <com.taihebase.activity.view.LoadImageView android:id="@+id/iv_icon" android:layout_width="@dimen/dimen_sw_60dp" android:layout_height="@dimen/dimen_sw_60dp" android:layout_centerVertical="true" android:layout_marginStart="@dimen/dimen_sw_15dp" app:failureImage="@drawable/icon_avatar_default" app:liv_corner_radius="4dp" app:roundAsCircle="true"/>
                <TextView android:textSize="15sp" android:textColor="@color/abc_ic_star_half_black_36dp" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginRight="@dimen/dimen_sw_15dp" android:layout_toRightOf="@+id/iv_icon" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/layout_mannger" android:background="@color/color_white" android:paddingLeft="@dimen/dimen_sw_15dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_75dp" android:layout_marginTop="@dimen/dimen_sw_10dp">
                <TextView android:textSize="14sp" android:textColor="@color/abc_ic_star_black_48dp" android:id="@+id/tv_mannger" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="群主/管理员" android:layout_centerVertical="true"/>
                <View android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_alignParentBottom="true"/>
                <com.showstartfans.activity.view.IconListView android:gravity="right" android:id="@+id/ilv_mannger" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_toLeftOf="@+id/ibtn_arrow_mannger" android:layout_toRightOf="@+id/tv_mannger" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/ibtn_arrow_mannger" android:background="@null" android:paddingTop="@dimen/dimen_sw_15dp" android:paddingRight="@dimen/dimen_sw_15dp" android:paddingBottom="@dimen/dimen_sw_15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/mine_icon_next" android:layout_alignParentRight="true" android:contentDescription="@string/app_name"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/layout_member" android:background="@color/color_white" android:paddingLeft="@dimen/dimen_sw_15dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_75dp">
                <TextView android:textSize="14sp" android:textColor="@color/abc_ic_star_black_48dp" android:id="@+id/tv_member" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="群成员" android:layout_centerVertical="true"/>
                <View android:layout_alignParentBottom="true" style="@style/lineHorizontalEB"/>
                <com.showstartfans.activity.view.IconListView android:gravity="right" android:id="@+id/ilv_member" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_toLeftOf="@+id/ibtn_arrow_member" android:layout_toRightOf="@+id/tv_member" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/ibtn_arrow_member" android:background="@null" android:paddingTop="@dimen/dimen_sw_15dp" android:paddingRight="@dimen/dimen_sw_15dp" android:paddingBottom="@dimen/dimen_sw_15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/mine_icon_next" android:layout_alignParentRight="true" android:contentDescription="@string/app_name"/>
            </RelativeLayout>
            <RelativeLayout android:background="@color/color_white" android:paddingLeft="@dimen/dimen_sw_15dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_55dp">
                <TextView android:textSize="14sp" android:textColor="@color/abc_ic_star_black_48dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="群人数" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/abc_ic_voice_search_api_material" android:id="@+id/tv_member_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_sw_15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <View android:layout_alignParentBottom="true" style="@style/lineHorizontalEB"/>
            </RelativeLayout>
            <RelativeLayout android:background="@color/color_white" android:paddingLeft="@dimen/dimen_sw_15dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_55dp">
                <TextView android:textSize="14sp" android:textColor="@color/abc_ic_star_black_48dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="创建时间" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/abc_ic_voice_search_api_material" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_sw_15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:id="@+id/line1" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_10dp"/>
            <RelativeLayout android:id="@+id/rl_wechat" android:background="@color/color_white" android:paddingLeft="@dimen/dimen_sw_15dp" android:paddingRight="@dimen/dimen_sw_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_55dp">
                <TextView android:textSize="14sp" android:textColor="@color/abc_ic_ab_back_material" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="官方微信群"/>
                <ImageView android:id="@+id/image_arrow1" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/mine_icon_next" android:layout_alignParentRight="true" android:contentDescription="@string/app_name"/>
                <TextView android:textSize="14sp" android:textColor="@color/abc_ic_star_half_black_36dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_sw_10dp" android:text="查看二维码" android:layout_toLeftOf="@+id/image_arrow1" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View android:id="@+id/line2" android:background="@color/color_line" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginLeft="15dp"/>
            <RelativeLayout android:id="@+id/rl_qq" android:background="@color/color_white" android:paddingLeft="@dimen/dimen_sw_15dp" android:paddingRight="@dimen/dimen_sw_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_55dp">
                <TextView android:textSize="14sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/txt_qq" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/image_arrow2" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/mine_icon_next" android:layout_alignParentRight="true" android:contentDescription="@string/app_name"/>
                <TextView android:textSize="14sp" android:textColor="@color/abc_ic_star_half_black_36dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_sw_10dp" android:text="点击加入" android:layout_toLeftOf="@+id/image_arrow2" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:background="@color/color_white" android:paddingLeft="@dimen/dimen_sw_15dp" android:paddingRight="@dimen/dimen_sw_15dp" android:paddingBottom="@dimen/dimen_sw_40dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_10dp" android:minHeight="@dimen/dimen_sw_120dp">
                <TextView android:textSize="14sp" android:textColor="@color/abc_ic_star_half_black_36dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_23dp" android:layout_marginBottom="@dimen/dimen_sw_23dp" android:text="群简介"/>
                <TextView android:textSize="13sp" android:textColor="@color/abc_ic_voice_search_api_material" android:id="@+id/tv_desc" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/btn_chat" android:background="@drawable/black_2corner_selecter" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_45dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginTop="@dimen/dimen_sw_20dp" android:layout_marginRight="@dimen/dimen_sw_15dp" android:text="发送消息" style="@style/btnBorderlessStyle"/>
            <Button android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/btn_bottom" android:background="@drawable/red_btn_corners2_selecter" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_45dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginTop="@dimen/dimen_sw_15dp" android:layout_marginRight="@dimen/dimen_sw_15dp" android:text="退出该群" style="@style/btnBorderlessStyle"/>
            <View android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_60dp"/>
        </LinearLayout>
    </ScrollView>
</com.soli.pullupdownrefresh.PullRefreshLayout>
