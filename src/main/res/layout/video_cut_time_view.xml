<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/video_frames_layout" android:layout_width="match_parent" android:layout_height="50dp">
        <androidx.recyclerview.widget.RecyclerView android:layout_gravity="bottom" android:id="@+id/video_frames_recyclerView" android:layout_width="match_parent" android:layout_height="50dp"/>
        <ImageView android:layout_gravity="bottom" android:id="@+id/positionIcon" android:background="@color/white" android:layout_width="1dp" android:layout_height="50dp" android:layout_marginLeft="35dp" android:contentDescription="@null"/>
        <LinearLayout android:layout_gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:layout_gravity="bottom" android:layout_width="35dp" android:layout_height="50dp"/>
            <LinearLayout android:gravity="bottom" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/seekBarLayout" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1"/>
            <View android:layout_gravity="bottom" android:layout_width="35dp" android:layout_height="match_parent"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
