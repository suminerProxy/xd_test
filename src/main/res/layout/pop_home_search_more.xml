<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/shape_10dp_white_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="12dp">
        <TextView android:textSize="15sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/top_title" android:paddingLeft="@dimen/dimen_sw_20dp" android:paddingRight="@dimen/dimen_sw_20dp" android:paddingBottom="@dimen/dimen_sw_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="销售情况" app:layout_constraintTop_toTopOf="0"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/sale_rv" android:paddingBottom="@dimen/dimen_sw_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/top_title"/>
        <TextView android:textSize="15sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/top_title_two" android:paddingLeft="@dimen/dimen_sw_20dp" android:paddingRight="@dimen/dimen_sw_20dp" android:paddingBottom="@dimen/dimen_sw_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_30dp" android:text="价格" app:layout_constraintTop_toBottomOf="@+id/sale_rv"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/price_rv" android:paddingBottom="@dimen/dimen_sw_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/top_title_two"/>
        <View android:id="@+id/line_op" android:background="@drawable/bg_elevation" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_10dp" app:layout_constraintTop_toBottomOf="@+id/price_rv"/>
        <LinearLayout android:gravity="center_vertical" android:paddingLeft="@dimen/dimen_sw_10dp" android:paddingRight="@dimen/dimen_sw_10dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_60dp" android:elevation="12dp" app:layout_constraintTop_toBottomOf="@+id/line_op">
            <TextView android:textSize="16sp" android:textColor="@color/abc_ic_ab_back_material" android:gravity="center" android:id="@+id/reset_status" android:background="@drawable/shape_40dp_f8" android:layout_width="0dp" android:layout_height="@dimen/dimen_sw_45dp" android:text="重置" android:layout_weight="0.35" android:layout_marginEnd="@dimen/dimen_sw_10dp"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/confirm_status" android:background="@drawable/crow_buy_button" android:layout_width="0dp" android:layout_height="@dimen/dimen_sw_45dp" android:text="@string/Confirm" android:layout_weight="0.65"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
