                <com.taihebase.activity.view.LoadImageView android:id="@+id/ad_icon" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_55dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginTop="@dimen/dimen_sw_28dp" android:layout_marginRight="@dimen/dimen_sw_15dp" android:layout_below="@+id/layout_loc_card" app:liv_corner_radius="@dimen/dimen_sw_60dp"/>
