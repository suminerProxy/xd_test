        <FrameLayout android:id="@+id/head_parent" android:layout_width="@dimen/dimen_sw_80dp" android:layout_height="@dimen/dimen_sw_80dp" android:layout_marginBottom="@dimen/dimen_sw_m_52dp" android:layout_marginStart="@dimen/dimen_sw_20dp" android:elevation="@dimen/dimen_sw_12dp">
