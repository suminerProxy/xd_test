                        <TextView android:textSize="12sp" android:textColor="@color/abc_ic_star_black_48dp" android:gravity="center" android:id="@+id/txt_Hotel" android:layout_width="0dp" android:layout_height="wrap_content" android:text="酒店订单" android:drawableTop="@mipmap/mine_icon_hotel" android:drawablePadding="8dp" android:layout_weight="1"/>
                        <TextView android:textSize="12sp" android:textColor="@color/abc_ic_star_black_48dp" android:gravity="center" android:visibility="invisible" android:layout_width="0dp" android:layout_height="wrap_content" android:text="占位" android:drawableTop="@mipmap/mine_icon_hotel" android:drawablePadding="8dp" android:layout_weight="1"/>
