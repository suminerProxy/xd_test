                    <TextView android:textSize="12sp" android:textColor="@color/abc_ic_star_black_48dp" android:gravity="center" android:id="@+id/tv_active_center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="活动中心" android:drawableTop="@mipmap/icon_activity" android:drawablePadding="8dp" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/menu_parent_two" android:background="@color/default_system_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/top_menu_one">
