        <TextView android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/wbcf_button_yes" android:layout_width="match_parent" android:layout_height="48dp" android:layout_weight="1" style="@style/WbcfAlertButton"/>
    </LinearLayout>
</LinearLayout>
