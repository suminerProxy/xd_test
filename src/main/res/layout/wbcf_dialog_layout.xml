<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/wbcf_root_view" android:background="@drawable/wbcf_round_corner_dialog_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="18sp" android:textColor="?attr/wbcfCustomDialogTitleTextColor" android:layout_gravity="center_horizontal" android:id="@+id/wbcf_dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="32dp"/>
