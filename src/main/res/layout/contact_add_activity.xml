<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.tencent.qcloud.tuicore.component.TitleBarLayout android:id="@+id/add_friend_titlebar" android:layout_width="match_parent" android:layout_height="@dimen/page_title_height"/>
    <RelativeLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="15.36sp" android:textColor="#444444" android:id="@+id/search_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/contact_search" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:background="@drawable/contact_shape_search" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_toLeftOf="@+id/search_button">
            <ImageView android:layout_gravity="center" android:background="@drawable/core_search_icon" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="5dp" android:scaleType="fitCenter"/>
            <EditText android:textSize="16sp" android:layout_gravity="center" android:id="@+id/search_edit" android:background="@null" android:layout_width="0dp" android:layout_height="28dp" android:layout_marginLeft="10dp" android:hint="@string/hint_search_user_id" android:lines="1" android:singleLine="true" android:layout_weight="1" android:imeOptions="actionSearch"/>
            <ImageView android:layout_gravity="center" android:id="@+id/imgv_delete" android:visibility="gone" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginRight="3dp" android:src="@drawable/core_delete_icon" android:scaleType="centerInside"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/friend_detail_area" android:background="#ffffff" android:padding="@dimen/page_margin" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/contact_profile_self_height">
        <com.tencent.qcloud.tuicore.component.gatherimage.ShadeImageView android:layout_gravity="start" android:id="@+id/friend_icon" android:layout_width="@dimen/contact_profile_face_size" android:layout_height="@dimen/contact_profile_face_size" android:layout_marginLeft="@dimen/contact_profile_face_margin_left" android:layout_marginTop="@dimen/contact_profile_face_margin_top" android:layout_marginRight="@dimen/contact_profile_face_margin_right" android:scaleType="centerCrop"/>
        <TextView android:textSize="@dimen/contact_profile_nick_name_text_size" android:gravity="center_vertical" android:id="@+id/friend_nick_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/friend_icon" android:layout_toEndOf="@+id/friend_icon"/>
        <TextView android:textSize="@dimen/contact_profile_account_text_size" android:gravity="center_vertical" android:id="@+id/friend_account_tag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/contact_profile_text_margin" android:text="@string/contact_account_tag" android:layout_below="@+id/friend_nick_name" android:layout_alignStart="@+id/friend_nick_name"/>
        <TextView android:textSize="@dimen/contact_profile_account_text_size" android:textColor="@color/font_blue" android:gravity="center_vertical" android:id="@+id/friend_account" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/friend_nick_name" android:layout_alignTop="@+id/friend_account_tag" android:layout_toEndOf="@+id/friend_account_tag"/>
        <TextView android:textSize="@dimen/contact_profile_account_text_size" android:gravity="center_vertical" android:id="@+id/group_type_tag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/contact_profile_text_margin" android:text="@string/contact_group_type_tag" android:layout_below="@+id/friend_account_tag" android:layout_alignStart="@+id/friend_account_tag"/>
        <TextView android:textSize="@dimen/contact_profile_signature_text_size" android:gravity="center_vertical" android:id="@+id/group_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/group_type_tag" android:layout_toEndOf="@+id/group_type_tag"/>
    </RelativeLayout>
    <TextView android:textSize="13.44sp" android:textColor="#444444" android:gravity="center" android:id="@+id/id_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15.36dp"/>
    <TextView android:textSize="13.44sp" android:textColor="#444444" android:gravity="center" android:id="@+id/not_found_tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15.36dp"/>
</LinearLayout>
