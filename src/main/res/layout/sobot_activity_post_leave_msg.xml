<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/sobot_common_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/sobot_layout_titlebar1"/>
    <ScrollView android:id="@+id/sobot_sv_root" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/sobot_post_msg_layout" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:background="@color/sobot_line_1dp" android:layout_width="match_parent" android:layout_height="0.4dp"/>
                <TextView android:textSize="@dimen/sobot_listview_remind_text_size" android:textColor="@color/sobot_common_gray" android:id="@+id/sobot_tv_post_msg" android:background="@color/sobot_listview_remind" android:paddingLeft="20dp" android:paddingTop="12dp" android:paddingRight="20dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="20dp" android:paddingEnd="20dp"/>
                <View android:background="@color/sobot_line_1dp" android:layout_width="match_parent" android:layout_height="0.4dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:background="@color/sobot_white" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="14sp" android:textColor="@color/sobot_common_gray2" android:id="@+id/sobot_tv_problem_description" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textColor="#f9676f" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" *"/>
                </LinearLayout>
                <EditText android:textSize="14sp" android:textColor="@color/sobot_common_black" android:textColorHint="@color/sobot_common_gray" android:gravity="top" android:id="@+id/sobot_post_et_content" android:background="@drawable/sobot_edittext_noborder_shape" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="150dp" android:maxLength="3000" android:lineSpacingExtra="5dp" android:inputType="textMultiLine"/>
            </LinearLayout>
            <View android:background="@color/sobot_line_1dp" android:layout_width="match_parent" android:layout_height="@dimen/sobot_line_height_0_4_dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/sobot_common_gray2" android:id="@+id/sobot_tv_leaveExplain" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="11dp" android:layout_marginRight="20dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
            <Button android:textSize="17sp" android:textColor="@color/sobot_common_white" android:gravity="center" android:id="@+id/sobot_btn_submit" android:background="@drawable/sobot_normal_btn_bg" android:layout_width="match_parent" android:layout_height="44dp" android:layout_margin="20dp" android:stateListAnimator="@null"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
