<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/toolbar_height">
    <FrameLayout android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:layout_marginStart="15dp" android:layout_marginEnd="15dp">
        <EditText android:textSize="15sp" android:textColor="@color/abc_ic_voice_search_api_material" android:textColorHint="@color/abc_ic_voice_search_api_material" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/searchInput" android:background="@drawable/edittext_background" android:paddingLeft="40dp" android:paddingRight="40dp" android:layout_width="match_parent" android:layout_height="40dp" android:hint="想搜索什么?" android:singleLine="true" android:inputType="text"/>
        <ImageView android:layout_gravity="center" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginStart="18dp" app:srcCompat="@drawable/icon_search"/>
        <ImageView android:layout_gravity="center" android:id="@+id/searchClear" android:paddingRight="15dp" android:layout_width="30dp" android:layout_height="match_parent" app:srcCompat="@drawable/icon_close"/>
    </FrameLayout>
    <TextView android:textSize="16sp" android:textColor="@color/abc_ic_voice_search_api_material" android:gravity="center" android:id="@+id/searchFinish" android:background="@drawable/default_view_press_selector" android:paddingLeft="3dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="@dimen/toolbar_height" android:text="取消"/>
</LinearLayout>
