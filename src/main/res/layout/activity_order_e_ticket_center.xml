<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:id="@+id/type_mp" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
        <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:ellipsize="end" android:id="@+id/ticket_type_str" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="35dp" android:text="门票类型" android:maxLines="2" android:lineSpacingExtra="2dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/abc_ic_ab_back_material" android:ellipsize="end" android:gravity="right" android:id="@+id/t_name_content" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="2" android:layout_weight="1" android:lineSpacingExtra="2dp"/>
    </LinearLayout>
    <View android:id="@+id/ticket_type_line" android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/type_dh" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
        <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="35dp" android:text="联系电话" android:maxLines="2" android:lineSpacingExtra="2dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/abc_ic_ab_back_material" android:ellipsize="end" android:gravity="right" android:id="@+id/user_phone" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="2" android:layout_weight="1" android:lineSpacingExtra="2dp"/>
    </LinearLayout>
    <View android:id="@+id/phone_line" android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/type_gyr" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
        <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:ellipsize="end" android:id="@+id/ticket_user_list_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="35dp" android:text="观演人" android:maxLines="2" android:lineSpacingExtra="2dp"/>
        <com.showstartfans.activity.view.ScrollListView android:id="@+id/ticket_user_list" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:divider="@null" android:minHeight="70dp" android:layout_weight="1"/>
    </LinearLayout>
    <View android:id="@+id/deta_line" android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:ellipsize="end" android:id="@+id/des" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:maxLines="4" android:lineSpacingExtra="2dp"/>
</LinearLayout>
