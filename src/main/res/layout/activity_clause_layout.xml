<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:background="@color/color_white" android:paddingLeft="20dp" android:paddingTop="2dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_60dp" android:layout_alignParentBottom="true" android:elevation="12dp">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/abc_ic_ab_back_material" android:gravity="center_vertical" android:id="@+id/disagree" android:layout_width="0dp" android:layout_height="45dp" android:text="不同意并退出" android:layout_weight="1"/>
        <TextView android:textSize="16sp" android:textColor="@color/color_white" android:gravity="center" android:id="@+id/agree" android:background="@drawable/crow_buy_button" android:layout_width="@dimen/dimen_sw_140dp" android:layout_height="45dp" android:text="同意"/>
    </LinearLayout>
    <TextView android:textSize="13sp" android:textColor="@color/abc_ic_ab_back_material" android:gravity="center_vertical" android:id="@+id/tips_p" android:background="@drawable/im_ripple_line" android:paddingLeft="19dp" android:paddingRight="19dp" android:layout_width="match_parent" android:layout_height="45dp" android:text="使用前需阅读并同意服务条款与隐私政策"/>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/tips_p">
        <LinearLayout android:orientation="vertical" android:paddingBottom="@dimen/dimen_sw_60dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="13sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/terms_of_service" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="22dp" android:layout_marginRight="20dp" android:layout_marginBottom="22dp" android:drawableBottom="@drawable/icon_content_expand" android:drawablePadding="20dp"/>
            <TextView android:textSize="13sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/privacy_policy" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="6dp" android:layout_marginRight="20dp" android:layout_marginBottom="2dp" android:drawableBottom="@drawable/icon_content_expand" android:drawablePadding="20dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
