    <RelativeLayout android:gravity="center_vertical" android:id="@+id/head_p" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/dimen_sw_10dp" android:paddingEnd="@dimen/dimen_sw_20dp" android:layout_toEndOf="@+id/iv_userFace">
        <TextView android:textSize="14sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_sw_18dp"/>
        <TextView android:gravity="center" android:id="@+id/creator_icon" android:layout_width="@dimen/dimen_sw_30dp" android:layout_height="@dimen/dimen_sw_14dp" android:layout_marginTop="3dp" android:drawableEnd="@drawable/video_icon_zhuchuang" android:layout_marginStart="4dp" android:layout_toEndOf="@+id/tv_content"/>
        <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:id="@+id/tv_createTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_5dp" android:singleLine="true" android:layout_below="@+id/tv_content"/>
        <TextView android:textSize="10sp" android:gravity="center" android:id="@+id/txt_action" android:paddingTop="5dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawablePadding="5dp" android:layout_centerVertical="true" android:drawableEnd="@drawable/icon_like_normal" android:paddingStart="10dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <TextView android:textSize="14sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/comm_str_all" android:paddingTop="@dimen/dimen_sw_13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/head_p" android:paddingEnd="@dimen/dimen_sw_20dp" android:layout_marginStart="@dimen/dimen_sw_70dp"/>
    <TextView android:textSize="10sp" android:textColor="@color/red_base" android:gravity="center_vertical" android:id="@+id/like_this" android:background="@drawable/shape_40dp_ffeaea" android:paddingLeft="@dimen/dimen_sw_8dp" android:paddingRight="@dimen/dimen_sw_8dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_sw_20dp" android:layout_marginTop="@dimen/dimen_sw_8dp" android:text="@string/creator_str_like" android:drawablePadding="@dimen/dimen_sw_8dp" android:layout_below="@+id/comm_str_all" android:drawableStart="@drawable/icon_like_highlight" android:layout_marginStart="@dimen/dimen_sw_70dp"/>
    <View android:id="@+id/line" android:background="@color/default_system_background" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_8dp" android:layout_marginTop="@dimen/dimen_sw_20dp" android:layout_below="@+id/like_this"/>
    <TextView android:textSize="16sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/total_replay" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_20dp" android:layout_marginTop="@dimen/dimen_sw_21dp" android:layout_marginRight="@dimen/dimen_sw_20dp" android:layout_marginBottom="@dimen/dimen_sw_23dp" android:text="@string/all_replay_str" android:layout_below="@+id/line"/>
</RelativeLayout>
