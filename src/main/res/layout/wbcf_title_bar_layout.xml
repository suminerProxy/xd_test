<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/title_bar_rl" android:background="?attr/wbcfTitleBarBg" android:layout_width="match_parent" android:layout_height="48dp">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/wbcf_left_button" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentLeft="true">
        <ImageView android:id="@+id/wbcf_left_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:src="@mipmap/wbcf_back"/>
        <TextView android:id="@+id/wbcf_left_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="返回" style="@style/wbcf_white_text_16sp_style"/>
    </LinearLayout>
    <TextView android:textSize="20sp" android:textColor="@color/wbcf_white" android:id="@+id/wbcf_bar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="标题" android:layout_centerInParent="true"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/wbcf_right_button" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
        <ImageView android:id="@+id/wbcf_right_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="16dp"/>
        <TextView android:id="@+id/wbcf_right_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" style="@style/wbcf_white_text_16sp_style"/>
    </LinearLayout>
</RelativeLayout>
