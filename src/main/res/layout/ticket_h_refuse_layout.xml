<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="vertical" android:paddingTop="@dimen/dimen_sw_60dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.9">
        <ImageView android:layout_gravity="center" android:id="@+id/bg_emp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ticket_home_emp" android:scaleType="fitCenter" android:contentDescription="@string/app_name" app:actualImageScaleType="2" app:fadeDuration="0"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/cancel_p" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0.1">
        <LinearLayout android:gravity="center" android:id="@+id/url_p" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/sure_xy" android:layout_width="@dimen/dimen_sw_12dp" android:layout_height="@dimen/dimen_sw_12dp" android:src="@drawable/pay_unselect" android:contentDescription="@string/user_real_name"/>
            <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:gravity="center" android:id="@+id/xy_str" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_5dp" android:text="我已阅读并同意" android:layout_toRightOf="@+id/sure_xy"/>
            <TextView android:textSize="12sp" android:textColor="@color/red_base" android:gravity="center" android:id="@+id/xy_url" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_5dp" android:text="《秀动票夹使用协议》" android:layout_toRightOf="@+id/xy_str"/>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/open_tick" android:background="@drawable/crow_buy_button" android:layout_width="@dimen/dimen_sw_145dp" android:layout_height="@dimen/dimen_sw_45dp" android:layout_marginTop="@dimen/dimen_sw_16dp" android:text="开启票夹" android:layout_below="@+id/url_p" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
