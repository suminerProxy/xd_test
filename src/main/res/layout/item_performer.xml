            <TextView android:textSize="16sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="13sp" android:textColor="@color/abc_ic_voice_search_api_material" android:id="@+id/tv_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
        </LinearLayout>
        <ImageView android:id="@+id/iv_gougou" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/icon_gougou_red" android:contentDescription="@string/app_name"/>
        <ImageView android:id="@+id/iv_Edit" android:paddingLeft="15dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/icon_edit" android:contentDescription="@string/app_name"/>
    </LinearLayout>
    <View android:id="@+id/lins" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" style="@style/lineHorizontalEB"/>
</LinearLayout>
