        <View android:id="@+id/view_line_one" android:background="@color/split_lint_color" android:layout_width="match_parent" android:layout_height="4dp"/>
        <TextView android:textSize="12.86sp" android:textColor="@color/list_bottom_text_bg" android:ellipsize="end" android:id="@+id/conversation_tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="4dp" android:layout_marginRight="20dp" android:text="@string/chat_record_reference" android:singleLine="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
        <View android:id="@+id/view_line_three" android:background="@color/split_lint_color" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginTop="4dp"/>
    </LinearLayout>
</RelativeLayout>
