<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:id="@+id/conversation_layout" android:background="@color/transparent" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
    <ImageView android:layout_gravity="center" android:id="@+id/icon_conversation" android:background="#ffffff" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="14.85dp" android:src="@drawable/core_search_icon" android:scaleType="fitCenter" android:layout_alignParentLeft="true"/>
    <TextView android:textSize="16.3sp" android:textColor="@color/black_font_color" android:ellipsize="end" android:gravity="center" android:id="@+id/conversation_title" android:background="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/btn_margin_left" android:text="@string/more_conversation_label" android:singleLine="true" android:layout_toRightOf="@+id/icon_conversation"/>
    <ImageView android:textSize="11.14sp" android:gravity="center" android:id="@+id/more_conversation_arrow" android:background="#ffffff" android:paddingRight="14.85dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
