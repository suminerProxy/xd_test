<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.taihebase.activity.view.RatioLayout android:layout_width="match_parent" android:layout_height="wrap_content" app:ratio="1">
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/iv_photo_lpsi" android:layout_width="match_parent" android:layout_height="match_parent" app:fadeDuration="0"/>
            <View android:id="@+id/V_Filter" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="0.5"/>
            <FrameLayout android:layout_gravity="top|right" android:id="@+id/layout_check" android:clipToPadding="false" android:layout_width="@dimen/dimen_sw_50dp" android:layout_height="@dimen/dimen_sw_50dp">
                <FrameLayout android:layout_gravity="top|right" android:paddingBottom="@dimen/dimen_sw_2dp" android:clipToPadding="false" android:layout_width="@dimen/dimen_sw_20dp" android:layout_height="@dimen/dimen_sw_20dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp">
