                    <ImageView android:id="@+id/iv_gougoou" android:layout_width="@dimen/dimen_sw_20dp" android:layout_height="@dimen/dimen_sw_20dp" android:src="@mipmap/default_red"/>
                </FrameLayout>
            </FrameLayout>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:layout_gravity="bottom|right" android:id="@+id/tv_Flag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:text="flag" android:shadowColor="#88000000" android:shadowDx="0" android:shadowDy="0.5" android:shadowRadius="10"/>
        </FrameLayout>
    </com.taihebase.activity.view.RatioLayout>
</FrameLayout>
