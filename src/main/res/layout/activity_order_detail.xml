<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/default_system_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:id="@+id/btn_buy" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" app:cardBackgroundColor="@color/white" app:cardElevation="12dp">
        <RelativeLayout android:id="@+id/b_p" android:layout_width="match_parent" android:layout_height="65dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginTop="5.5dp" android:layout_marginRight="@dimen/dimen_sw_15dp">
            <Button android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/txt_buy" android:background="@drawable/red_circular_5dp" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="6dp" android:layout_marginTop="7dp" android:layout_marginRight="6dp" android:text="@string/pay_now_new"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView android:id="@+id/txt_tips" android:visibility="gone" android:text="一旦票品售出概不退换" style="@style/txtTopTips"/>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/btn_buy" android:layout_below="@+id/txt_tips">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <FrameLayout android:id="@+id/fl_top_qr_code" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <FrameLayout android:id="@+id/fl_pick_msg_up" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <FrameLayout android:id="@+id/fl_pick_up" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
            <View android:background="@color/default_system_background" android:layout_width="match_parent" android:layout_height="10dp"/>
            <FrameLayout android:id="@+id/fl_ticket_info" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <FrameLayout android:id="@+id/fl_ticket_detail" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <FrameLayout android:id="@+id/fl_ticket_pay_way" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
