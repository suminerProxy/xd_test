<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/status_bar_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/font_blue" android:id="@+id/cancel_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/cancle" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:background="@drawable/shape_search" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_toLeftOf="@+id/cancel_button">
            <ImageView android:layout_gravity="center" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="5dp" android:src="@drawable/core_search_icon" android:scaleType="fitCenter"/>
            <EditText android:textSize="16sp" android:layout_gravity="center" android:id="@+id/edt_search" android:background="@null" android:layout_width="0dp" android:layout_height="28dp" android:layout_marginLeft="10dp" android:hint="@string/search" android:lines="1" android:singleLine="true" android:layout_weight="1" android:imeOptions="actionSearch"/>
            <ImageView android:layout_gravity="center" android:id="@+id/imgv_delete" android:visibility="gone" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginRight="3dp" android:src="@drawable/core_delete_icon" android:scaleType="centerInside"/>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <View android:id="@+id/view_blank_zero" android:background="@color/status_bar_color" android:layout_width="match_parent" android:layout_height="5dp"/>
            <RelativeLayout android:id="@+id/contact_layout" android:background="@drawable/shape_search" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="12.86sp" android:textColor="@color/list_bottom_text_bg" android:ellipsize="end" android:id="@+id/contact_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="4dp" android:layout_marginRight="20dp" android:text="@string/contact_subtitle" android:singleLine="true" android:layout_alignParentLeft="true"/>
                <View android:id="@+id/view_line_one" android:background="@color/split_lint_color" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginTop="4dp" android:layout_below="@+id/contact_title"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/friend_rc_search" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view_line_one"/>
                <RelativeLayout android:orientation="horizontal" android:id="@+id/more_contact_layout" android:background="#ffffff" android:paddingLeft="14.85dp" android:paddingTop="12dp" android:paddingRight="14.85dp" android:layout_width="match_parent" android:layout_height="@dimen/item_height" android:layout_below="@+id/friend_rc_search">
                    <ImageView android:layout_gravity="center" android:id="@+id/search_icon_contact" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="3dp" android:src="@drawable/core_search_icon" android:scaleType="fitCenter" android:layout_alignParentLeft="true"/>
                    <TextView android:textSize="16.3sp" android:textColor="@color/black_font_color" android:ellipsize="end" android:gravity="center" android:id="@+id/more_contact_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/btn_margin_left" android:text="@string/more_contact_label" android:singleLine="true" android:layout_toRightOf="@+id/search_icon_contact"/>
                    <ImageView android:textSize="11.14sp" android:gravity="center" android:id="@+id/more_contact_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <View android:id="@+id/view_blank_one" android:background="@color/status_bar_color" android:layout_width="match_parent" android:layout_height="5dp"/>
            <RelativeLayout android:id="@+id/group_layout" android:background="@drawable/shape_search" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="12.86sp" android:textColor="@color/list_bottom_text_bg" android:ellipsize="end" android:id="@+id/group_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="4dp" android:layout_marginRight="20dp" android:text="@string/group_subtitle" android:singleLine="true" android:layout_alignParentLeft="true"/>
                <View android:id="@+id/view_line_two" android:background="@color/split_lint_color" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginTop="4dp" android:layout_below="@+id/group_title"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/group_rc_search" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view_line_two"/>
                <RelativeLayout android:orientation="horizontal" android:id="@+id/more_group_layout" android:background="#ffffff" android:paddingLeft="14.85dp" android:paddingTop="12dp" android:paddingRight="14.85dp" android:layout_width="match_parent" android:layout_height="@dimen/item_height" android:layout_below="@+id/group_rc_search">
                    <ImageView android:layout_gravity="center" android:id="@+id/search_icon_group" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="3dp" android:src="@drawable/core_search_icon" android:scaleType="fitCenter" android:layout_alignParentLeft="true"/>
                    <TextView android:textSize="16.3sp" android:textColor="@color/black_font_color" android:ellipsize="end" android:gravity="center" android:id="@+id/more_group_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/btn_margin_left" android:text="@string/more_group_label" android:singleLine="true" android:layout_toRightOf="@+id/search_icon_group"/>
                    <ImageView android:textSize="11.14sp" android:gravity="center" android:id="@+id/more_group_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <View android:id="@+id/view_blank_two" android:background="@color/status_bar_color" android:layout_width="match_parent" android:layout_height="5dp"/>
            <RelativeLayout android:id="@+id/conversation_layout" android:background="@drawable/shape_search" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="12.86sp" android:textColor="@color/list_bottom_text_bg" android:ellipsize="end" android:id="@+id/conversation_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="4dp" android:layout_marginRight="20dp" android:text="@string/chat_record" android:singleLine="true" android:layout_alignParentLeft="true"/>
                <View android:id="@+id/view_line_three" android:background="@color/split_lint_color" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginTop="4dp" android:layout_below="@+id/conversation_title"/>
                <com.tencent.qcloud.tuikit.tuisearch.ui.view.PageRecycleView android:id="@+id/conversation_rc_search" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view_line_three"/>
                <RelativeLayout android:orientation="horizontal" android:id="@+id/more_conversation_layout" android:background="#ffffff" android:paddingLeft="14.85dp" android:paddingTop="12dp" android:paddingRight="14.85dp" android:layout_width="match_parent" android:layout_height="@dimen/item_height" android:layout_below="@+id/conversation_rc_search">
                    <ImageView android:layout_gravity="center" android:id="@+id/search_icon_conversation" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="3dp" android:src="@drawable/core_search_icon" android:scaleType="fitCenter" android:layout_alignParentLeft="true"/>
                    <TextView android:textSize="16.3sp" android:textColor="@color/black_font_color" android:ellipsize="end" android:gravity="center" android:id="@+id/more_conversation_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/btn_margin_left" android:text="@string/more_conversation_label" android:singleLine="true" android:layout_toRightOf="@+id/search_icon_conversation"/>
                    <ImageView android:textSize="11.14sp" android:gravity="center" android:id="@+id/more_conversation_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
