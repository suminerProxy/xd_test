<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <View style="@style/lineHorizontalf8"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="60dp">
        <TextView android:textSize="15sp" android:textColor="@color/black1" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="音乐标签" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textColor="@color/color_red_main" android:id="@+id/txt_edit_music_tag" android:paddingRight="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="编辑标签" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View style="@style/lineHorizontalEB"/>
    <com.taihebase.activity.widget.autowraplistview.AutoWrapListView android:id="@+id/lv_music_tag" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp" android:layout_marginBottom="15dp"/>
