        <TextView android:gravity="center" android:id="@+id/txt_music_tag_empty" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="还没有添加音乐风格" android:drawableLeft="@drawable/icon_mine_zhanwei_music" android:drawablePadding="12dp" android:layout_centerInParent="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/black1" android:gravity="center" android:id="@+id/txt_music_tag_add" android:background="@drawable/shap_bg_gray" android:visibility="gone" android:layout_width="130dp" android:layout_height="32dp" android:text="添加音乐标签" android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
