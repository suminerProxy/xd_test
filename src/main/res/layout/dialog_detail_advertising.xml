<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:paddingLeft="@dimen/dimen_sw_30dp" android:paddingRight="@dimen/dimen_sw_30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="@dimen/dimen_sw_30dp">
    <RelativeLayout android:id="@+id/ad_text" android:background="@drawable/shape_10dp_white" android:paddingLeft="@dimen/dimen_sw_10dp" android:paddingRight="@dimen/dimen_sw_10dp" android:paddingBottom="@dimen/dimen_sw_20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="@dimen/dimen_sw_10dp">
        <TextView android:textSize="@dimen/dimen_sw_12sp" android:textColor="@color/color_white" android:id="@+id/close_time" android:background="@drawable/shape_20dp_c7" android:paddingLeft="@dimen/dimen_sw_8dp" android:paddingTop="@dimen/dimen_sw_4dp" android:paddingRight="@dimen/dimen_sw_8dp" android:paddingBottom="@dimen/dimen_sw_4dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_5dp" android:text="关闭" android:layout_alignParentEnd="true" android:paddingHorizontal="@dimen/dimen_sw_8dp" android:paddingVertical="@dimen/dimen_sw_4dp"/>
