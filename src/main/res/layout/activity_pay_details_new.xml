<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/default_system_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:id="@+id/scrollViewExtend" android:scrollbars="none" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.taihebase.activity.view.LoadImageView android:id="@+id/pay_image_bg" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_580dp" app:actualImageScaleType="0" app:fadeDuration="0"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/gift_p" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_10dp" android:layout_marginTop="@dimen/dimen_sw_90dp" android:layout_marginRight="@dimen/dimen_sw_10dp">
                <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="@color/abc_ic_ab_back_material" android:gravity="center" android:id="@+id/pay_tips" android:background="@drawable/pay_tips_top" android:paddingLeft="@dimen/dimen_sw_10dp" android:paddingTop="@dimen/dimen_sw_10dp" android:paddingRight="@dimen/dimen_sw_10dp" android:paddingBottom="@dimen/dimen_sw_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_5dp" android:layout_marginRight="@dimen/dimen_sw_5dp" android:layout_marginBottom="@dimen/dimen_sw_5dp" android:text="温馨提示:应主办方要求,该演出下单必须绑定观演人" android:paddingVertical="@dimen/dimen_sw_10dp"/>
                <TextView android:textSize="@dimen/dimen_sw_12sp" android:textColor="@color/abc_dialog_material_background" android:gravity="center" android:id="@+id/pay_alternate_num" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_15dp" android:text="当前参与候补人数：285人"/>
                <TextView android:textSize="@dimen/dimen_sw_12sp" android:textColor="@color/abc_dialog_material_background" android:gravity="center" android:id="@+id/pay_alternate_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_5dp" android:text="候补结束时间：2022-12-30  23:59:59"/>
                <RelativeLayout android:background="@drawable/border_radiu_top_white_yoff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_12dp">
                    <com.taihebase.activity.view.LoadImageView android:id="@+id/goodsImg" android:layout_width="@dimen/dimen_sw_75dp" android:layout_height="@dimen/dimen_sw_100dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginTop="@dimen/dimen_sw_16dp" android:layout_marginBottom="@dimen/dimen_sw_6dp" android:scaleType="centerCrop" app:liv_corner_radius="6dp"/>
                    <TextView android:textSize="14sp" android:textColor="@color/abc_ic_ab_back_material" android:ellipsize="end" android:id="@+id/txt_activity_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_16dp" android:layout_marginTop="@dimen/dimen_sw_16dp" android:layout_marginRight="@dimen/dimen_sw_16dp" android:maxLines="2" android:layout_toRightOf="@+id/goodsImg"/>
                    <TextView android:textSize="12sp" android:textColor="@color/abc_item_background_holo_light" android:ellipsize="end" android:id="@+id/txt_city_pay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_16dp" android:layout_marginTop="@dimen/dimen_sw_16dp" android:layout_marginRight="@dimen/dimen_sw_16dp" android:singleLine="true" android:layout_toRightOf="@+id/goodsImg" android:layout_below="@+id/txt_activity_name"/>
                    <TextView android:textSize="12sp" android:textColor="@color/abc_item_background_holo_light" android:ellipsize="end" android:id="@+id/ticketTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_16dp" android:layout_marginTop="@dimen/dimen_sw_8dp" android:layout_marginRight="@dimen/dimen_sw_16dp" android:layout_marginBottom="@dimen/dimen_sw_5dp" android:singleLine="true" android:layout_toRightOf="@+id/goodsImg" android:layout_below="@+id/txt_city_pay"/>
                </RelativeLayout>
                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_8dp" android:layout_marginTop="-5dp" android:layout_marginRight="@dimen/dimen_sw_8dp" android:src="@drawable/order_top_bg_line" android:contentDescription="@string/app_name"/>
                <LinearLayout android:gravity="top" android:orientation="vertical" android:background="@drawable/border_radiu_bottom_white_yoff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-4dp">
                    <LinearLayout android:gravity="center_vertical" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_50dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginTop="@dimen/dimen_sw_10dp" android:layout_marginRight="@dimen/dimen_sw_15dp">
                        <TextView android:textSize="13sp" android:textColor="@color/abc_ic_ab_back_material" android:ellipsize="end" android:id="@+id/type_paper" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_sw_10dp" android:maxLines="2" android:layout_weight="1"/>
                        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/abc_ic_ab_back_material" android:ellipsize="end" android:id="@+id/ticketUnitPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2"/>
                        <TextView android:textSize="13sp" android:textColor="@color/abc_ic_ab_back_material" android:ellipsize="end" android:id="@+id/ticketNo_count" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View android:id="@+id/line_one" android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginRight="@dimen/dimen_sw_15dp"/>
                    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/type_take_type_p" android:paddingTop="@dimen/dimen_sw_16dp" android:paddingBottom="@dimen/dimen_sw_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginRight="@dimen/dimen_sw_15dp">
                        <TextView android:textSize="13sp" android:textColor="@color/abc_ic_ab_back_material" android:ellipsize="end" android:id="@+id/take_ticket_tname" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:lineSpacingExtra="2dp"/>
                        <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:paddingTop="@dimen/dimen_sw_2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="支付成功后，无需取票。前往我的票夹查看入场二维码"/>
                    </LinearLayout>
                    <FrameLayout android:id="@+id/fl_ticket" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_sw_10dp"/>
                    <View android:id="@+id/ticket_type_line" android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginRight="@dimen/dimen_sw_15dp"/>
                    <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:ellipsize="end" android:id="@+id/des_payment" android:paddingTop="@dimen/dimen_sw_10dp" android:paddingBottom="@dimen/dimen_sw_10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginTop="@dimen/dimen_sw_15dp" android:layout_marginRight="@dimen/dimen_sw_15dp" android:layout_marginBottom="@dimen/dimen_sw_10dp" android:maxLines="3" android:lineSpacingExtra="2dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:background="@color/color_white_mine_bg" android:paddingBottom="@dimen/dimen_sw_120dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_10dp" android:layout_below="@+id/gift_p">
                <RelativeLayout android:gravity="center_vertical" android:id="@+id/ticket_user_p" android:paddingTop="@dimen/dimen_sw_16dp" android:paddingBottom="@dimen/dimen_sw_26dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginRight="@dimen/dimen_sw_15dp">
                    <TextView android:textSize="13sp" android:textColor="@color/abc_ic_ab_back_material" android:ellipsize="end" android:id="@+id/ticket_user_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="观演人" android:maxLines="2" android:lineSpacingExtra="2dp"/>
                    <TextView android:textSize="11sp" android:textStyle="bold" android:textColor="@color/abc_ic_ab_back_material" android:gravity="center" android:id="@+id/add_watch_user" android:background="@drawable/tab_mine_edit_bg" android:layout_width="@dimen/dimen_sw_49dp" android:layout_height="@dimen/dimen_sw_22dp" android:text="添加" android:layout_alignParentRight="true"/>
                    <TextView android:textSize="12sp" android:textColor="@color/red_base" android:ellipsize="end" android:id="@+id/ticket_user_type_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_4dp" android:layout_marginRight="@dimen/dimen_sw_85dp" android:layout_below="@+id/ticket_user_type" android:lineSpacingExtra="2dp"/>
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/ticket_user_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_15dp" android:minHeight="@dimen/dimen_sw_45dp" android:layout_below="@+id/ticket_user_type_msg" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </RelativeLayout>
                <View android:id="@+id/phone_line_man" android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginRight="@dimen/dimen_sw_15dp"/>
                <LinearLayout android:gravity="center_vertical" android:id="@+id/ticketCouponRly" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_50dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginRight="@dimen/dimen_sw_15dp">
                    <TextView android:textSize="13sp" android:textColor="@color/abc_ic_ab_back_material" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="优惠券" android:maxLines="2" android:lineSpacingExtra="2dp"/>
                    <TextView android:textSize="13sp" android:textColor="@color/abc_ic_ab_back_material" android:ellipsize="end" android:id="@+id/ticketCoupon" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_8dp" android:layout_weight="1"/>
                    <ImageView android:id="@+id/coupon_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_6dp" android:src="@drawable/icon_arrow" android:contentDescription="@string/app_name"/>
                </LinearLayout>
                <View android:id="@+id/c_line" android:background="@color/color_line" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginRight="@dimen/dimen_sw_15dp"/>
                <FrameLayout android:id="@+id/pay_p" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <com.taihebase.activity.widget.Toolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <include layout="@layout/show_pay_bottom"/>
</RelativeLayout>
