        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_47dp" android:layout_marginRight="@dimen/dimen_sw_30dp" android:src="@drawable/me_qr_des" android:layout_below="@+id/code_parent" android:layout_alignParentRight="true" android:contentDescription="@string/app_name"/>
</RelativeLayout>
