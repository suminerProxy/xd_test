<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.taihebase.activity.view.LoadImageView android:id="@+id/bg_qr" android:layout_width="match_parent" android:layout_height="match_parent" app:fadeDuration="0"/>
    <ImageView android:id="@+id/back_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_16dp" android:layout_marginTop="@dimen/dimen_sw_50dp" android:src="@drawable/icon_down_img" android:contentDescription="@string/app_name"/>
