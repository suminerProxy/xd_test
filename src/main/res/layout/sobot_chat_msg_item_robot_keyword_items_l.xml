            <LinearLayout android:orientation="vertical" android:id="@+id/sobot_keyword_grouplist" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
