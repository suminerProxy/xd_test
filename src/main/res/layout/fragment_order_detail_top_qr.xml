<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="vertical" android:background="@color/default_system_background" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:background="@drawable/ticket_qr" android:paddingLeft="25dp" android:paddingTop="20dp" android:paddingRight="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="15dp" android:layout_marginRight="8dp" android:layout_marginBottom="15dp">
            <LinearLayout android:gravity="center_vertical" android:paddingLeft="11dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.6">
                <com.taihebase.activity.view.LoadImageView android:id="@+id/image_code" android:layout_width="140dp" android:layout_height="140dp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_weight="0.4">
                <TextView android:textSize="18sp" android:textColor="@color/black1" android:gravity="left" android:id="@+id/txt_ticket_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="5"/>
                <TextView android:textSize="13sp" android:textColor="@color/black3" android:gravity="left" android:id="@+id/txt_ticket_type_num" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:gravity="center" android:id="@+id/qr_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-10dp" android:layout_marginBottom="20dp"/>
</LinearLayout>
