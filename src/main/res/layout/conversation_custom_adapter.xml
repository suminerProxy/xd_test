<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:id="@+id/item_left" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="#ffffff" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/conversation_icon" android:layout_width="match_parent" android:layout_height="200dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/conversation_title" android:background="@color/custom_transparent" android:layout_width="match_parent" android:layout_height="30dp" android:singleLine="true" android:layout_alignBottom="@+id/conversation_icon" android:layout_centerInParent="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/list_bottom_text_bg" android:ellipsize="end" android:id="@+id/conversation_last_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_alignRight="@+id/conversation_title" android:layout_alignBottom="@+id/conversation_icon"/>
        <TextView android:textSize="10sp" android:textColor="@color/list_bottom_text_bg" android:id="@+id/conversation_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/conversation_title" android:layout_alignParentRight="true"/>
        <com.tencent.qcloud.tuicore.component.UnreadCountTextView android:textSize="10sp" android:textColor="#fff" android:gravity="center" android:id="@+id/conversation_unread" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
