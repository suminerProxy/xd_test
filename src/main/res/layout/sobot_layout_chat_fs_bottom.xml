<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <HorizontalScrollView android:id="@+id/sobot_custom_menu" android:background="@color/sobot_lable_bg_color" android:visibility="gone" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/sobot_custom_menu_linearlayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="10dp" android:layout_marginRight="12dp" android:layout_marginBottom="10dp" android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
    </HorizontalScrollView>
    <TextView android:textSize="12sp" android:textColor="@color/sobot_white" android:gravity="center" android:id="@+id/send_voice_robot_hint" android:background="#ff858f9a" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp"/>
    <View android:background="@color/sobot_line_1dp" android:layout_width="match_parent" android:layout_height="0.4dp"/>
    <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:id="@+id/sobot_ll_bottom" android:paddingLeft="12dp" android:paddingTop="6dp" android:paddingRight="12dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="12dp" android:paddingEnd="12dp">
        <ImageButton android:id="@+id/sobot_btn_set_mode_rengong" android:background="@drawable/sobot_manualwork_button_selector" android:visibility="gone" android:layout_width="27dp" android:layout_height="32dp" android:layout_marginTop="2dp" android:layout_marginRight="12dp" android:layout_marginBottom="2dp" android:layout_marginEnd="12dp"/>
        <View android:layout_gravity="center_vertical" android:id="@+id/sobot_view_model_split" android:background="@color/sobot_line_1dp" android:visibility="gone" android:layout_width="1dp" android:layout_height="26dp" android:layout_marginRight="12dp" android:layout_marginEnd="12dp"/>
        <ImageButton android:id="@+id/sobot_btn_model_edit" android:background="@drawable/sobot_keyboard_button_selector" android:visibility="gone" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginTop="5dp" android:layout_marginRight="12dp" android:layout_marginBottom="5dp" android:layout_marginEnd="12dp"/>
        <ImageButton android:id="@+id/sobot_btn_model_voice" android:background="@drawable/sobot_vioce_button_selector" android:visibility="gone" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginTop="5dp" android:layout_marginRight="12dp" android:layout_marginBottom="5dp" android:layout_marginEnd="12dp"/>
        <LinearLayout android:gravity="center" android:id="@+id/sobot_btn_press_to_speak" android:background="@drawable/sobot_chatting_writemsg_selector" android:paddingTop="2dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="36dp" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textColor="@color/sobot_common_black" android:id="@+id/sobot_txt_speak_content" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:id="@+id/sobot_edittext_layout" android:background="@drawable/sobot_chatting_bottom_bg_blur" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <com.sobot.chat.widget.ContainsEmojiEditText android:textSize="14sp" android:textColor="@color/sobot_color_bottom_msg_input_color" android:id="@+id/sobot_et_sendmessage" android:background="@null" android:paddingTop="2dp" android:paddingBottom="2dp" android:visibility="visible" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:maxHeight="96dp" android:minHeight="36dp" android:maxLength="1000" android:layout_weight="1" android:layout_toLeftOf="@+id/sobot_btn_ll_emoticon_view" android:layout_centerVertical="true" android:imeOptions="actionDone" android:layout_marginStart="12dp" android:layout_toStartOf="@+id/sobot_btn_ll_emoticon_view"/>
            <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/sobot_btn_ll_emoticon_view" android:layout_width="wrap_content" android:layout_height="36dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginStart="5dp" android:layout_marginEnd="5dp">
                <ImageButton android:id="@+id/sobot_btn_emoticon_view" android:background="@drawable/sobot_emoticon_button_selector" android:visibility="gone" android:layout_width="26dp" android:layout_height="26dp" android:contentDescription="@null"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginStart="12dp">
            <Button android:textSize="14sp" android:textColor="@color/sobot_common_white" android:gravity="center" android:id="@+id/sobot_btn_send" android:background="@drawable/sobot_btn_sendmsg_selector" android:visibility="gone" android:layout_width="64dp" android:layout_height="36dp" android:stateListAnimator="@null"/>
            <Button android:gravity="center" android:id="@+id/sobot_btn_upload_view" android:background="@drawable/sobot_picture_button_selector" android:layout_width="36dp" android:layout_height="36dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/sobot_line_1dp" android:layout_width="match_parent" android:layout_height="0.4dp"/>
    <com.sobot.chat.widget.kpswitch.widget.KPSwitchFSPanelLinearLayout android:orientation="vertical" android:id="@+id/sobot_panel_root" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.sobot.chat.widget.kpswitch.CustomeChattingPanel android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </com.sobot.chat.widget.kpswitch.widget.KPSwitchFSPanelLinearLayout>
    <RelativeLayout android:id="@+id/sobot_ll_restart_talk" android:paddingLeft="20dp" android:paddingTop="12dp" android:paddingRight="20dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="20dp" android:paddingEnd="20dp">
        <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="@color/sobot_common_gray1" android:gravity="center_horizontal" android:id="@+id/sobot_tv_message" android:background="@drawable/sobot_chat_bottom_selector" android:padding="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:drawableTop="@drawable/sobot_leavemsg_normal" android:drawablePadding="4dp" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="@color/sobot_common_gray1" android:gravity="center_horizontal" android:id="@+id/sobot_tv_satisfaction" android:background="@drawable/sobot_chat_bottom_selector" android:padding="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:drawableTop="@drawable/sobot_picture_satisfaction_selector" android:drawablePadding="4dp" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:textColor="@color/sobot_common_gray1" android:gravity="center_horizontal" android:id="@+id/sobot_txt_restart_talk" android:background="@drawable/sobot_chat_bottom_selector" android:padding="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:drawableTop="@drawable/sobot_bottombar_conversation" android:drawablePadding="4dp" android:layout_weight="1"/>
        </LinearLayout>
        <ImageView android:gravity="center_vertical" android:id="@+id/sobot_image_reloading" android:background="@drawable/sobot_reloading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
