    <LinearLayout android:orientation="vertical" android:id="@+id/fail_info" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="?attr/wbcfFaceResultTitleColor" android:layout_gravity="center_horizontal" android:id="@+id/tip_type" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/reasonLl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp">
                <TextView android:textSize="@dimen/wbcf_size1" android:textColor="?attr/wbcfReasonTextColor" android:id="@+id/reason" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:textSize="@dimen/wbcf_size1" android:textColor="?attr/wbcfReasonTextColor" android:id="@+id/reason2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp"/>
                <TextView android:textSize="@dimen/wbcf_size1" android:textColor="?attr/wbcfReasonTextColor" android:id="@+id/reason3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:textSize="18sp" android:textColor="@color/wbcf_white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/complete_button" android:background="?attr/wbcfResultYesBtnBg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="49dp" android:text="@string/wbcf_sure"/>
