        <TextView android:textSize="18sp" android:textColor="?attr/wbcfResultQuitBtnTextColor" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/exit_button" android:background="?attr/wbcfResultBtnBg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:text="@string/wbcf_no_try"/>
    </LinearLayout>
</LinearLayout>
