    <LinearLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/sobot_ll_file_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
        <TextView android:textSize="14sp" android:textColor="@color/sobot_common_gray" android:id="@+id/sobot_tv_file_size" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
