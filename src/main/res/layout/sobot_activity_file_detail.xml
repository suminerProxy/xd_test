        <TextView android:id="@+id/sobot_btn_cancel" android:background="@drawable/sobot_icon_remove" android:layout_width="15dp" android:layout_height="15dp"/>
    </LinearLayout>
    <TextView android:textSize="14sp" android:textColor="@color/sobot_common_gray2" android:layout_gravity="center_horizontal" android:id="@+id/sobot_tv_decribe" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp"/>
</LinearLayout>
