<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@android:color/black" android:descendantFocusability="afterDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/surface_container" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.taihebase.activity.view.LoadImageView android:id="@+id/thumb" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitCenter" android:contentDescription="@string/app_name" app:fadeDuration="0" app:progressBarImage="@color/video_bg"/>
    </FrameLayout>
    <com.showstartfans.activity.widget.danmu.THDanmakuView android:id="@+id/danmu_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_sw_12dp"/>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/top_control" android:background="@drawable/gradual_video_play_control_bg" android:paddingLeft="@dimen/dimen_sw_20dp" android:paddingTop="@dimen/dimen_sw_20dp" android:paddingRight="@dimen/dimen_sw_20dp" android:paddingBottom="@dimen/dimen_sw_40dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="15sp" android:textColor="#ffffff" android:ellipsize="marquee" android:gravity="center_vertical" android:id="@+id/title" android:layout_width="0dp" android:layout_height="44dp" android:singleLine="true" android:drawableLeft="@drawable/close_icon" android:drawablePadding="@dimen/dimen_sw_14dp" android:layout_weight="1" android:layout_marginEnd="25dp"/>
        <LinearLayout android:layout_gravity="center_vertical" android:id="@+id/user_msg" android:background="@drawable/shape_100dp_aa" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="30dp">
            <com.taihebase.activity.view.LoadImageView android:layout_gravity="center_vertical" android:id="@+id/user_logo" android:layout_width="25dp" android:layout_height="25dp" app:roundAsCircle="true"/>
            <com.taihebase.activity.view.LoadImageView android:id="@+id/artistType" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginLeft="-13dp" android:layout_marginTop="14.5dp" android:src="@drawable/icon_avatar_default" android:scaleType="centerCrop" app:roundAsCircle="true"/>
            <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="@color/color_white" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:maxWidth="@dimen/dimen_sw_135dp" android:lines="1"/>
            <TextView android:textSize="11sp" android:textColor="@color/color_white" android:gravity="center" android:layout_gravity="center" android:id="@+id/follow_user" android:background="@drawable/crow_buy_button" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="9dp" android:text="关注"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/layout_bottom" android:background="@drawable/gradual_video_play_control_bottom_bg" android:paddingLeft="@dimen/dimen_sw_20dp" android:paddingTop="@dimen/dimen_sw_17dp" android:paddingRight="@dimen/dimen_sw_20dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <SeekBar android:layout_gravity="center_vertical" android:id="@+id/bottom_seek_progress" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="2dp" android:max="100" android:progressDrawable="@drawable/seek_progres_video" android:minHeight="2dp" android:thumb="@drawable/bottom_seek_thumb"/>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/top_msg" android:paddingTop="@dimen/dimen_sw_20dp" android:paddingBottom="@dimen/dimen_sw_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/bottom_seek_progress">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/start" android:layout_width="25dp" android:layout_height="25dp" android:src="@drawable/play_button" android:scaleType="fitXY" android:contentDescription="@string/app_name"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:layout_gravity="center_vertical" android:id="@+id/current" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00"/>
            <TextView android:textSize="13sp" android:textColor="#ffffff" android:layout_gravity="center_vertical" android:id="@+id/line" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="/"/>
            <TextView android:textSize="13sp" android:textColor="#ffffff" android:layout_gravity="center_vertical" android:id="@+id/total" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/danmu_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:src="@drawable/video_icon_danmu" android:scaleType="fitXY" android:contentDescription="@string/app_name"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/danmu_edit" android:background="@drawable/shape_100dp_bb" android:paddingLeft="15dp" android:paddingRight="20dp" android:layout_width="0dp" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:text="随乐而起, 有感而发" android:layout_weight="1"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/fullscreen" android:paddingLeft="14dp" android:paddingRight="14dp" android:visibility="invisible" android:layout_width="52.5dp" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_sw_100dp" android:layout_marginRight="28dp" android:src="@drawable/live_icon_screenturn" android:scaleType="centerInside" android:contentDescription="@string/app_name"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/share_video" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="28dp" android:src="@drawable/share_w" android:contentDescription="@string/app_name"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_white" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/zan_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/video_icon_list_zan_normal_night" android:drawablePadding="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    <ProgressBar android:id="@+id/bottom_progress" android:visibility="gone" android:layout_width="match_parent" android:layout_height="8dp" android:layout_marginBottom="12dp" android:max="100" android:progressDrawable="@drawable/jz_bottom_progress" android:layout_alignParentBottom="true" style="?android:attr/progressBarStyleHorizontal"/>
    <ProgressBar android:id="@+id/loading" android:visibility="invisible" android:layout_width="22dp" android:layout_height="22dp" android:indeterminateDrawable="@drawable/jz_loading" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/zan_animation" android:visibility="gone" android:layout_width="250dp" android:layout_height="250dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:lottie_fileName="dianzan.json"/>
    <ImageView android:id="@+id/start_complete_button" android:visibility="gone" android:layout_width="@dimen/dimen_sw_40dp" android:layout_height="@dimen/dimen_sw_40dp" android:src="@drawable/play_button" android:scaleType="fitXY" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/retry_layout" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
        <TextView android:textSize="14sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_loading_failed"/>
        <ImageView android:id="@+id/retry_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:src="@drawable/replay_icon" android:contentDescription="@string/app_name"/>
    </LinearLayout>
</RelativeLayout>
