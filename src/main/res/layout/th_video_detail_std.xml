<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@android:color/black" android:descendantFocusability="afterDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/surface_container" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.taihebase.activity.view.LoadImageView android:id="@+id/thumb" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitCenter" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:contentDescription="@string/app_name" android:layout_alignParentStart="true" app:fadeDuration="0" app:placeholderImage="@color/color_image_bg" app:progressBarImage="@color/color_image_bg"/>
    <View android:id="@+id/top_control_bg" android:background="@drawable/video_play_meng_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.showstartfans.activity.widget.danmu.THDanmakuView android:id="@+id/danmu_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_sw_12dp"/>
    <RelativeLayout android:id="@+id/layout_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:gravity="center" android:id="@+id/time_p" android:background="@drawable/play_time_bg" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_sw_24dp" android:layout_marginBottom="@dimen/dimen_sw_2dp">
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/current" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/line" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="/"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/total" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView android:id="@+id/fullscreen" android:layout_width="22dp" android:layout_height="22dp" android:layout_marginRight="8dp" android:layout_marginBottom="4dp" android:src="@drawable/live_icon_screenturn" android:scaleType="centerInside" android:layout_above="@+id/bottom_seek_progress" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <SeekBar android:id="@+id/bottom_seek_progress" android:background="@null" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="4dp" android:max="100" android:progressDrawable="@drawable/seek_progres_video" android:minHeight="4dp" android:thumb="@drawable/bottom_seek_thumb" android:layout_below="@+id/time_p" android:paddingStart="0dp" android:paddingEnd="0dp"/>
        <ImageView android:id="@+id/danmu_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:src="@drawable/video_icon_danmu" android:scaleType="fitXY" android:layout_below="@+id/bottom_seek_progress" android:contentDescription="@string/app_name"/>
        <TextView android:textSize="12sp" android:textColor="#ffffff" android:gravity="center_vertical" android:id="@+id/danmu_edit" android:background="@drawable/shape_100dp_bb" android:paddingLeft="@dimen/dimen_sw_15dp" android:paddingTop="6.5dp" android:paddingRight="@dimen/dimen_sw_20dp" android:paddingBottom="6.5dp" android:visibility="gone" android:layout_width="@dimen/dimen_sw_240dp" android:layout_height="@dimen/dimen_sw_30dp" android:layout_marginLeft="@dimen/dimen_sw_12dp" android:layout_marginTop="22dp" android:layout_marginRight="@dimen/dimen_sw_40dp" android:text="随乐而起, 有感而发" android:layout_toRightOf="@+id/danmu_button" android:layout_below="@+id/bottom_seek_progress"/>
        <ImageView android:id="@+id/share_video" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:src="@drawable/share_w" android:layout_toLeftOf="@+id/zan_num" android:layout_below="@+id/bottom_seek_progress" android:contentDescription="@string/app_name"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_white" android:gravity="center_vertical" android:id="@+id/zan_num" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_30dp" android:layout_marginTop="24dp" android:drawableLeft="@drawable/video_icon_list_zan_normal_night" android:drawablePadding="@dimen/dimen_sw_5dp" android:layout_below="@+id/bottom_seek_progress" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ProgressBar android:id="@+id/bottom_progress" android:visibility="gone" android:layout_width="match_parent" android:layout_height="8dp" android:layout_marginBottom="12dp" android:max="100" android:progressDrawable="@drawable/jz_bottom_progress" android:layout_alignParentBottom="true" style="?android:attr/progressBarStyleHorizontal"/>
    <TextView android:textSize="14sp" android:textColor="#ffffff" android:ellipsize="marquee" android:gravity="center_vertical" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_21dp" android:layout_marginLeft="@dimen/dimen_sw_20dp" android:layout_marginTop="@dimen/dimen_sw_22dp" android:layout_marginRight="@dimen/dimen_sw_30dp" android:singleLine="true" android:drawableLeft="@drawable/close_icon" android:drawablePadding="@dimen/dimen_sw_15dp" android:layout_toLeftOf="@+id/user_msg" android:marqueeRepeatLimit="marquee_forever"/>
    <LinearLayout android:layout_gravity="center_vertical" android:id="@+id/user_msg" android:background="@drawable/shape_100dp_aa" android:paddingLeft="5dp" android:paddingRight="5dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginTop="@dimen/dimen_sw_20dp" android:layout_marginRight="@dimen/dimen_sw_20dp" android:layout_alignParentRight="true">
        <com.taihebase.activity.view.LoadImageView android:layout_gravity="center_vertical" android:id="@+id/user_logo" android:layout_width="25dp" android:layout_height="25dp" app:roundAsCircle="true"/>
        <com.taihebase.activity.view.LoadImageView android:id="@+id/artistType" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginLeft="-13dp" android:layout_marginTop="14.5dp" android:src="@drawable/icon_avatar_default" android:scaleType="centerCrop" app:roundAsCircle="true"/>
        <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="@color/color_white" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:maxWidth="@dimen/dimen_sw_135dp" android:lines="1"/>
        <TextView android:textSize="11sp" android:textColor="@color/color_white" android:gravity="center" android:layout_gravity="center" android:id="@+id/follow_user" android:background="@drawable/follow_button_new" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="9dp" android:text="关注"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/loading" android:visibility="invisible" android:layout_width="22dp" android:layout_height="22dp" android:indeterminateDrawable="@drawable/jz_loading" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/zan_animation" android:visibility="gone" android:layout_width="250dp" android:layout_height="250dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:lottie_fileName="dianzan.json"/>
    <ImageView android:id="@+id/start" android:layout_width="@dimen/dimen_sw_32dp" android:layout_height="@dimen/dimen_sw_32dp" android:src="@drawable/play_button" android:scaleType="fitXY" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:contentDescription="@string/call_phone_service"/>
    <ImageView android:gravity="center_horizontal" android:id="@+id/retry_btn" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:src="@drawable/replay_icon" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
</RelativeLayout>
