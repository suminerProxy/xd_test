<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/parent_p" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/gift_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="22dp" android:layout_marginRight="15dp" android:layout_marginBottom="24dp" android:drawablePadding="5dp"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/gift_menu" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_175dp"/>
    <LinearLayout android:gravity="center_vertical" android:paddingLeft="15dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_40dp" android:layout_marginTop="16dp" android:layout_marginBottom="40dp">
        <LinearLayout android:gravity="center_vertical" android:id="@+id/pay_pp" android:layout_width="wrap_content" android:layout_height="match_parent">
            <ImageView android:id="@+id/live_gift_pay" android:layout_width="19dp" android:layout_height="17dp" android:src="@drawable/zhifubaopay" android:contentDescription="@string/app_name"/>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center_vertical" android:id="@+id/pay_way" android:paddingLeft="7dp" android:paddingRight="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="支付宝"/>
            <ImageView android:id="@+id/arrow" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginTop="1dp" android:src="@drawable/mine_icon_next" android:contentDescription="@string/app_name"/>
        </LinearLayout>
        <View android:id="@+id/line" android:background="#979797" android:layout_width="0.5dp" android:layout_height="15dp" android:layout_marginLeft="@dimen/dimen_sw_12dp" android:layout_marginRight="@dimen/dimen_sw_12dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/gift_price" android:paddingRight="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:lines="1" android:layout_weight="1"/>
        <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/send_gift_num" android:background="@drawable/live_send_num_bg" android:paddingLeft="15dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_sw_32dp" android:text="1" android:drawableRight="@drawable/arrow_up" android:drawablePadding="10dp"/>
        <TextView android:textSize="13sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/send_gift_btn" android:background="@drawable/live_send_bg" android:paddingLeft="21dp" android:paddingRight="21dp" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_sw_32dp" android:text="送礼"/>
    </LinearLayout>
</merge>
