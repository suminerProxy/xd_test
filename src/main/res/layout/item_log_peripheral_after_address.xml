<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/dimen_sw_12sp" android:textColor="@color/abc_ic_ab_back_material" android:id="@+id/number_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="退货地址"/>
    <LinearLayout android:gravity="end" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="@dimen/dimen_sw_12sp" android:textStyle="bold" android:textColor="@color/abc_ic_ab_back_material" android:gravity="end|center_vertical" android:id="@+id/name_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/dimen_sw_20dp"/>
        <TextView android:textSize="@dimen/dimen_sw_12sp" android:textColor="@color/abc_item_background_holo_light" android:gravity="end|center_vertical" android:id="@+id/address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_5dp" android:layout_marginStart="@dimen/dimen_sw_20dp"/>
        <TextView android:textSize="@dimen/dimen_sw_12sp" android:textColor="@color/red_base" android:gravity="end|center_vertical" android:id="@+id/copy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_5dp" android:text="复制地址" android:layout_marginStart="@dimen/dimen_sw_20dp"/>
    </LinearLayout>
</LinearLayout>
