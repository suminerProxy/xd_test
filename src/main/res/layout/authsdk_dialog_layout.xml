<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/authsdk_title_rl" android:background="#026ed2" android:layout_width="match_parent" android:layout_height="50dp">
        <ImageButton android:id="@+id/authsdk_back_btn" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="12dp" android:src="@drawable/authsdk_return_bg" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="#ffffff" android:id="@+id/authsdk_title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ProgressBar android:layout_gravity="top" android:id="@+id/authsdk_progressBar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="4dp" style="?android:attr/progressBarStyleHorizontal"/>
    <WebView android:id="@+id/authsdk_webview" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never"/>
</LinearLayout>
