<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="vertical" android:background="@color/black3_50" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@drawable/dialog_bg" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginRight="50dp">
        <TextView android:textSize="20sp" android:textColor="@color/black1" android:id="@+id/txt_name" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/image_shenfen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/icon_mine_shenfen" android:layout_below="@+id/txt_name"/>
        <TextView android:textSize="13sp" android:textColor="@color/black3" android:id="@+id/txt_identity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp" android:layout_toRightOf="@+id/image_shenfen" android:layout_below="@+id/txt_name"/>
        <View android:id="@+id/line" android:layout_marginTop="20dp" android:layout_below="@+id/txt_identity" style="@style/lineHorizontalEB"/>
        <com.taihebase.activity.view.LoadImageView android:id="@+id/userLogo" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="20dp" android:layout_marginBottom="15dp" android:src="@drawable/icon_avatar_default" android:scaleType="centerCrop" android:layout_below="@+id/line" app:liv_border_color="@color/transparent" app:liv_border_width="0dp" app:liv_corner_radius="3dp"/>
        <TextView android:textSize="15sp" android:textColor="@color/black1" android:ellipsize="end" android:id="@+id/txt_name1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:singleLine="true" android:layout_toRightOf="@+id/userLogo" android:layout_alignTop="@+id/userLogo"/>
        <TextView android:textSize="12sp" android:textColor="@color/black3" android:ellipsize="end" android:id="@+id/txt_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="5dp" android:layout_marginRight="15dp" android:singleLine="true" android:layout_toRightOf="@+id/userLogo" android:layout_below="@+id/txt_name1"/>
    </RelativeLayout>
    <ImageView android:id="@+id/img_close" android:layout_width="44dp" android:layout_height="44dp" android:layout_marginTop="30dp" android:src="@drawable/bt_close_mine"/>
</LinearLayout>
