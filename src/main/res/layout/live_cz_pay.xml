<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/parent_p" android:background="@drawable/shape_1c_20dp_top" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_45dp">
        <TextView android:textSize="12sp" android:textColor="@color/abc_ic_star_half_black_36dp" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="充值即代表同意"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_white" android:gravity="center" android:id="@+id/select_t" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" 秀动充值协议"/>
    </LinearLayout>
    <View android:background="#14ffffff" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginBottom="10dp"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/pay_menu" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    <RelativeLayout android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="8dp">
        <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:gravity="center_vertical" android:id="@+id/count_yb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0音贝" android:layout_centerVertical="true"/>
        <View android:id="@+id/line" android:background="#979797" android:layout_width="0.5dp" android:layout_height="15dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_toRightOf="@+id/count_yb" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_white" android:id="@+id/pay_str" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="支付宝" android:layout_toRightOf="@+id/line" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/more_pay_icon" android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/mine_icon_next" android:layout_toRightOf="@+id/pay_str" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <TextView android:textSize="13sp" android:textColor="@color/color_white" android:gravity="center" android:id="@+id/pay_btn" android:background="@drawable/crow_buy_button" android:layout_width="@dimen/dimen_sw_90dp" android:layout_height="@dimen/dimen_sw_40dp" android:text="充值" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
