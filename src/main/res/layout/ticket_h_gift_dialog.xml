<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/shape_8dp_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginRight="@dimen/dimen_sw_15dp">
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/tiket_popwindow_selecte_pic" android:scaleType="fitXY" android:contentDescription="@string/app_name"/>
        <LinearLayout android:orientation="vertical" android:padding="@dimen/dimen_sw_28dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/dimen_sw_18sp" android:textStyle="bold" android:textColor="@color/abc_dialog_material_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_110dp" android:text="@string/ticket_select_title"/>
            <TextView android:textSize="12sp" android:textColor="@color/abc_ic_voice_search_api_material" android:id="@+id/ticket_gift_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_19dp" android:lineSpacingExtra="4dp"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/me_join" android:background="@drawable/shap_red" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_45dp" android:layout_marginTop="@dimen/dimen_sw_28dp" android:text="@string/ticket_me_str"/>
            <TextView android:textSize="16sp" android:textColor="@color/abc_ic_commit_search_api_mtrl_alpha" android:gravity="center" android:id="@+id/friend_join" android:background="@drawable/shape_100dp_black" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_45dp" android:layout_marginTop="@dimen/dimen_sw_12dp" android:text="赠予好友"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/close" android:layout_width="@dimen/dimen_sw_40dp" android:layout_height="@dimen/dimen_sw_40dp" android:layout_alignParentRight="true">
            <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/b_close" android:contentDescription="@string/app_name"/>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
