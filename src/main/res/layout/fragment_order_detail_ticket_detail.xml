<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/color_white" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:layout_marginRight="15dp" style="@style/lineHorizontalEB"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginRight="15dp">
        <TextView android:textSize="13sp" android:textColor="@color/abc_item_background_holo_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="单价"/>
        <TextView android:textSize="13sp" android:textColor="@color/black1" android:id="@+id/txt_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="15dp">
        <TextView android:textSize="13sp" android:textColor="@color/abc_item_background_holo_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="数量"/>
        <TextView android:textSize="13sp" android:textColor="@color/black1" android:id="@+id/txt_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="15dp">
        <TextView android:textSize="13sp" android:textColor="@color/abc_item_background_holo_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="票品总价"/>
        <TextView android:textSize="13sp" android:textColor="@color/black1" android:id="@+id/txt_all_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_freight" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="15dp">
        <TextView android:textSize="13sp" android:textColor="@color/abc_item_background_holo_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="运费"/>
        <TextView android:textSize="13sp" android:textColor="@color/black1" android:id="@+id/txt_freight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_coupon" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="15dp">
        <TextView android:textSize="13sp" android:textColor="@color/abc_item_background_holo_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="优惠"/>
        <TextView android:textSize="13sp" android:textColor="@color/black1" android:id="@+id/txt_coupon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_payInfo" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="15dp">
            <TextView android:textSize="13sp" android:textColor="@color/abc_item_background_holo_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下单时间"/>
            <TextView android:textSize="13sp" android:textColor="@color/black1" android:id="@+id/txt_buy_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_payTime" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="15dp">
            <TextView android:textSize="13sp" android:textColor="@color/abc_item_background_holo_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="支付时间"/>
            <TextView android:textSize="13sp" android:textColor="@color/black1" android:id="@+id/txt_pay_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/payMethod" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="15dp">
            <TextView android:textSize="13sp" android:textColor="@color/abc_item_background_holo_light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="支付方式"/>
            <TextView android:textSize="13sp" android:textColor="@color/black1" android:id="@+id/txt_pay_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:layout_marginTop="20dp" android:layout_marginRight="15dp" style="@style/lineHorizontalEB"/>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/rl_all_money" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginRight="15dp">
        <TextView android:textSize="15sp" android:textColor="@color/color_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="实付款"/>
        <TextView android:textSize="18sp" android:textColor="@color/color_red_main" android:id="@+id/txt_pay_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
