<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/sobot_msg_top_bottom_style">
    <TextView android:id="@+id/sobot_reminde_time_Text" style="@style/sobot_center_remind_time"/>
    <LinearLayout android:background="@drawable/sobot_consult_bg_normal" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="5dp" android:layout_marginRight="12dp" android:layout_marginStart="12dp" android:layout_marginEnd="12dp">
        <RelativeLayout android:id="@+id/sobot_container" android:background="@color/sobot_common_msg_bg_white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/sobot_goods_title_text_color" android:ellipsize="end" android:id="@+id/sobot_goods_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2"/>
            <com.sobot.chat.widget.image.SobotRCImageView android:id="@+id/sobot_goods_pic" android:visibility="visible" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:src="@drawable/sobot_icon_consulting_default_pic" android:scaleType="centerCrop" android:layout_below="@+id/sobot_goods_title" android:layout_marginEnd="10dp" app:sobot_round_corner="6dp"/>
            <TextView android:textSize="14sp" android:textColor="@color/sobot_goods_des_text_color" android:id="@+id/sobot_goods_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:maxLines="1" android:layout_toRightOf="@+id/sobot_goods_pic" android:layout_below="@+id/sobot_goods_title" android:layout_alignTop="@+id/sobot_goods_pic" android:layout_toEndOf="@+id/sobot_goods_pic"/>
            <TextView android:textSize="14sp" android:textColor="@color/sobot_color" android:id="@+id/sobot_goods_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_toRightOf="@+id/sobot_goods_pic" android:layout_below="@+id/sobot_goods_des" android:layout_toEndOf="@+id/sobot_goods_pic"/>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_marginStart="15dp" android:layout_alignParentEnd="true">
                <Button android:textSize="14sp" android:textColor="@color/sobot_common_white" android:id="@+id/sobot_goods_sendBtn" android:background="@drawable/sobot_evaluate_commit_selector" android:paddingLeft="15dp" android:paddingTop="1dp" android:paddingRight="15dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="30dp" android:paddingStart="15dp" android:paddingEnd="15dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
