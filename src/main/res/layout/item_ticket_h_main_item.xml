        <TextView android:textSize="12sp" android:textColor="@color/white" android:ellipsize="end" android:gravity="center" android:id="@+id/ticket_type_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_20dp" android:layout_marginTop="@dimen/dimen_sw_16dp" android:layout_marginRight="@dimen/dimen_sw_20dp" android:maxLines="1" android:lines="1" android:drawableLeft="@drawable/icon_ticket" android:drawablePadding="5dp" android:lineSpacingExtra="1dp"/>
        <View android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/qr_code" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="12sp" android:textColor="@color/white" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/excell_tag" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_sw_30dp" android:layout_marginTop="@dimen/dimen_sw_10dp" android:layout_marginRight="@dimen/dimen_sw_30dp" android:lines="1"/>
        <View android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1.5"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
