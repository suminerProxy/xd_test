            <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/msg_btn" android:background="@drawable/shape_40dp_red" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_sw_28dp" android:minWidth="@dimen/dimen_sw_82dp" android:text="入场"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/bottom_show" android:background="@drawable/ticket_h_main_bottom_bg" android:layout_width="match_parent" android:layout_height="@dimen/dimen_sw_88dp" android:layout_alignParentBottom="true">
            <com.taihebase.activity.view.LoadImageView android:id="@+id/show_post" android:layout_width="@dimen/dimen_sw_44dp" android:layout_height="@dimen/dimen_sw_58dp" android:layout_marginLeft="@dimen/dimen_sw_15dp" android:layout_marginTop="@dimen/dimen_sw_16dp" app:liv_corner_radius="6dp"/>
            <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="#1c1c1c" android:ellipsize="end" android:id="@+id/show_name" android:paddingLeft="@dimen/dimen_sw_8dp" android:paddingRight="@dimen/dimen_sw_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_16dp" android:lines="1" android:layout_toRightOf="@+id/show_post"/>
            <TextView android:textSize="11sp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/show_addr" android:paddingLeft="@dimen/dimen_sw_8dp" android:paddingRight="@dimen/dimen_sw_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_8dp" android:lines="1" android:layout_toRightOf="@+id/show_post" android:layout_below="@+id/show_name"/>
            <TextView android:textSize="11sp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/show_time" android:paddingLeft="@dimen/dimen_sw_8dp" android:paddingRight="@dimen/dimen_sw_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_sw_3dp" android:lines="1" android:layout_toRightOf="@+id/show_post" android:layout_below="@+id/show_addr"/>
            <ImageView android:id="@+id/adr_loc" android:layout_width="@dimen/dimen_sw_53dp" android:layout_height="@dimen/dimen_sw_54dp" android:src="@drawable/ticket_loc" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:contentDescription="@string/app_name"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:id="@+id/gift_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/friend_gift" android:contentDescription="@string/ticket_end"/>
    <TextView android:textSize="11sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/gift_friend_tex" android:background="@drawable/shape_black_alpha50" android:paddingLeft="@dimen/dimen_sw_10dp" android:paddingTop="@dimen/dimen_sw_5dp" android:paddingRight="@dimen/dimen_sw_10dp" android:paddingBottom="@dimen/dimen_sw_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_sw_3dp" android:text="赠予好友" android:drawableLeft="@drawable/small_gift_icon" android:drawablePadding="@dimen/dimen_sw_4dp" android:layout_alignParentRight="true"/>
</RelativeLayout>
