<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/cv_p" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.taihebase.activity.view.LoadImageView android:id="@+id/excell_bg" android:layout_width="match_parent" android:layout_height="match_parent" app:actualImageScaleType="6" app:fadeDuration="0" app:liv_corner_radius="18dp" app:placeholderImage="@color/color_image_bg"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:paddingTop="@dimen/dimen_sw_40dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/layout_bottom">
