<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetLeft="1px" android:insetRight="1px" android:insetTop="1px" android:insetBottom="1px">
    <selector>
        <item android:state_pressed="true">
            <shape>
                <gradient android:startColor="#dfdddd" android:endColor="#dfdddd" android:angle="270"/>
                <corners android:radius="2dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>
            </shape>
        </item>
        <item>
            <shape>
                <gradient android:startColor="#7f7f7f" android:endColor="#7f7f7f" android:angle="270"/>
                <corners android:radius="2dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp"/>
            </shape>
        </item>
    </selector>
</inset>
