<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android">
    <selector>
        <item android:state_pressed="false">
            <shape>
                <solid android:color="@color/color_white_night"/>
                <corners android:radius="20dp"/>
                <stroke android:width="1dp" android:color="@color/abc_list_selector_background_transition_holo_dark"/>
            </shape>
        </item>
        <item android:state_pressed="true">
            <shape>
                <solid android:color="@color/abc_list_selector_background_transition_holo_dark"/>
                <corners android:radius="20dp"/>
                <stroke android:width="1dp" android:color="@color/abc_list_selector_background_transition_holo_dark"/>
            </shape>
        </item>
    </selector>
</inset>
